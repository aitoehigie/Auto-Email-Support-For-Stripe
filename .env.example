# Email Configuration
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your-password-or-app-password
EMAIL_SERVER=imap.gmail.com

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465
SMTP_USE_TLS=false
SMTP_TIMEOUT=60
USE_SMTP_SSL=true

# Fallback SMTP Configuration (optional)
# FALLBACK_SMTP_SERVER=smtp.gmail.com
# FALLBACK_SMTP_PORT=587
# FALLBACK_SMTP_USE_TLS=true
# FALLBACK_SMTP_USER=your.email@gmail.com
# FALLBACK_SMTP_PASS=your-password-or-app-password

# API Keys
STRIPE_API_KEY=sk_test_your_stripe_key
NLP_API_KEY=your-nlp-service-key

# Application Settings
CONFIDENCE_THRESHOLD=0.9
EMAIL_CHECK_INTERVAL=60
EMAIL_BATCH_SIZE=100
MAX_RETRIES=3
RETRY_DELAY=2
APP_BASE_URL=https://hunchbank.example.com
SECURITY_TOKEN_SECRET=your-security-token-secret

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_EMAIL_RECIPIENTS=admin@example.com,manager@example.com
NOTIFICATION_EMAIL_URGENT=urgent@example.com,oncall@example.com
NOTIFICATION_SLACK_ENABLED=true
NOTIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/your-webhook-url
NOTIFICATION_SLACK_CHANNEL=#support-notifications
NOTIFICATION_SLACK_URGENT=#urgent-support

# Risk Threshold Settings
RISK_THRESHOLD_CONFIDENCE_LOW=0.5
RISK_THRESHOLD_CONFIDENCE_MEDIUM=0.7
RISK_THRESHOLD_CONFIDENCE_HIGH=0.9
RISK_THRESHOLD_AMOUNT_LOW=100
RISK_THRESHOLD_AMOUNT_MEDIUM=1000
RISK_THRESHOLD_AMOUNT_HIGH=10000
HIGH_RISK_INTENTS=refund,account_close,large_transfer,password_reset
